@using Microsoft.FluentUI.AspNetCore.Components
@inherits LayoutComponentBase

<PageTitle>Tradeinator - Dashboard</PageTitle>

<FluentLayout >
    <FluentHeader>
        Tradeinator Dashboard
    </FluentHeader>
    <FluentStack Orientation="Orientation.Horizontal">
        
        <FluentNavMenu Width="250">
            <FluentNavLink Icon="@(new Icons.Regular.Size24.Home())" Href="/" Match="NavLinkMatch.All">Home</FluentNavLink>
            <FluentNavLink Icon="@(new Icons.Regular.Size24.Calendar())" Href="events">Events</FluentNavLink>
            
            <FluentNavGroup Title="Item 3">
                <FluentNavLink Icon="@(new Icons.Regular.Size24.LeafOne())">Item 3.1</FluentNavLink>
                <FluentNavLink Icon="@(new Icons.Regular.Size24.LeafTwo())">Item 3.2</FluentNavLink>
            </FluentNavGroup>
            
        </FluentNavMenu>
        
        <FluentBodyContent Class="p-2 pe-2 ">
            
            @Body
            
            <FluentToastProvider/>
            <FluentDialogProvider/>
            <FluentTooltipProvider/>
            <FluentMessageBarProvider/>    
            
            
        </FluentBodyContent>
        
    </FluentStack>
    
</FluentLayout>